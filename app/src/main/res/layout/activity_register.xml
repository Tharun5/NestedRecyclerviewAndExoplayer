<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="126dp"
            android:layout_height="157dp"
            android:paddingBottom="10dp"
            android:src="@drawable/main_top" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="120dp"
            android:letterSpacing="0.03"
            android:text="SIGNUP"
            android:textColor="#68329b"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <EditText
        android:id="@+id/etName"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/sign"
        android:paddingStart="20dp"
        android:hint="Name"
        android:inputType="textPersonName"
        android:maxLines="1"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/ic_name"
        android:textColorHint="#708090"
        tools:ignore="RtlSymmetry" />

    <EditText
        android:id="@+id/etphno"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:inputType="phone"
        android:maxLines="1"
        android:layout_marginTop="20dp"
        android:background="@drawable/sign"
        android:paddingStart="20dp"
        android:hint="Phone Number"
        android:textColorHint="#708090"
        android:drawableLeft="@drawable/ic_phno"
        android:drawablePadding="10dp"
        tools:ignore="RtlSymmetry" />

    <EditText
        android:id="@+id/etSignupEmail"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:inputType="textEmailAddress"
        android:background="@drawable/sign"
        android:textColorHint="#708090"
        android:paddingStart="20dp"
        android:hint="Email"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="10dp"
        tools:ignore="RtlSymmetry" />

    <EditText
        android:id="@+id/etSignupPassword"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:maxLines="1"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"
        android:background="@drawable/sign"
        android:textColorHint="#708090"
        android:paddingStart="20dp"
        android:hint="Password"
        android:drawableLeft="@drawable/ic_password"
        android:drawablePadding="10dp"
        tools:ignore="RtlSymmetry" />

    <Button
        android:id="@+id/btnSignup"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/button"
        android:text="Sign Up"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/txtToLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Do you have an account? Sign In"
        android:textColor="#68329b"
        android:textSize="16sp" />

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible"/>

</LinearLayout>