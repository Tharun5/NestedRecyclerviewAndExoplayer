<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="#e5f5ff"
    tools:context=".ui.Fragments.AwardsFragment">

    <TextView
        android:id="@+id/txt_points"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:textColor="#485155"
        android:gravity="center_horizontal"
        android:text="Points  :  30 pts"
        android:textSize="27sp" />

    <View
        android:layout_marginTop="15dp"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="#ffffff" />

    <TextView
        android:id="@+id/txt_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center_horizontal"
        android:text="Level  1"
        android:textColor="#485155"
        android:textSize="27sp" />

    <ProgressBar
        android:id="@+id/level_progressBar"
        android:layout_width="match_parent"
        android:layout_margin="25dp"
        android:layout_height="50dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:max="3"
        android:scaleY="4"
        android:progress="0"/>

    <View
        android:layout_marginTop="15dp"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="#ffffff" />

    <TextView
        android:id="@+id/txt_badge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center_horizontal"
        android:textColor="#485155"
        android:text="Badges"
        android:textSize="27sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_empty"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/empty_box" />

        <TextView
            android:id="@+id/txt_empty"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#485155"
            android:layout_marginTop="20dp"
            android:text="Empty !"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_bronze"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:visibility="gone"
            android:layout_weight="1"
            android:src="@drawable/ic_bronze_star" />

        <ImageView
            android:id="@+id/img_silver"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:visibility="gone"
            android:layout_weight="1"
            android:src="@drawable/ic_silver_star" />

        <ImageView
            android:id="@+id/img_gold"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/ic_gold_star" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_bronze"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:visibility="gone"
            android:text="Bronze"
            android:textColor="#485155"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_silver"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:visibility="gone"
            android:text="Silver"
            android:textColor="#485155"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_gold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Gold"
            android:textColor="#485155"
            android:textSize="20sp" />


    </LinearLayout>

</LinearLayout>